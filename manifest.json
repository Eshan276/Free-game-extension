{
  "manifest_version": 3,
  "name": "Freebies Link Extractor",
  "version": "1.0",
  "description": "Extracts freebie links from GG Deals.",
  "permissions": ["activeTab", "storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://gg.deals/news/freebies/"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
